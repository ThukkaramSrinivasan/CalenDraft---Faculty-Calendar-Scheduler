                </ul>
            </div>
        </div>
        <div class="main-content" style="background-color: #EEEEEE;">
            <header>
                <form class="form-inline">
                    <div class="search-wrapper">
                        <span class="fas fa-search" style="font-size: 150%;"></span>
                        <input class="form-control"type="search" placeholder="Search">
                    </div>
                </form>
                <!--Notification popup-->
                <div class="notify-popup" id="notifypopup">
                    <a onclick="closenotify()"><button class="btn-danger btn-sm" style="right:0; color: white; border-color: none; align-items: center; border-radius: 25%;">x</button></a>
                    <h2>Notifications</h2>
                    <br>
                    <p>Notification 1</p>
                    <hr>
                    <p>Notification 2</p>
                </div>
                <!--Profile popup-->
                <div class="profile-popup" id="profilepopup">
                    <a onclick="closeprofile()" style="position:absolute; right: 2%; color:white; font-size:25px; text-align: end; font-weight: 700;"><button class="btn-danger btn-sm" style="color: white; border-color: none; align-items: center; border-radius: 25%;">x</button></a>
                    <h2>User</h2>
                    <ul>
                        <li style="padding-top:10px; font-size: 18px;">
                            <a href="javascript: submit6();" style="text-decoration: none; color: black;">
                                <span class="fas fa-user" style="text-decoration: none; color: black;"></span>
                                <span>View Profile</span>
                            </a>
                        </li>
                        <hr>
                        <li style=" font-size: 18px;">
                            <a href="javascript: submit4();" style="text-decoration: none; color: black;">
                                <span class="fas fa-sign-out-alt" style="text-decoration: none; color: black;"></span>
                                <span >Logout</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="social-icons">
                    <a onclick="opennotify()" style="text-decoration: none; color: black;"><span class="far fa-bell" style="font-size: 150%;"><span class="badge-bell"></span></span></a><!--Bell-->
                    <a onclick="openprofile()" style="text-decoration: none; color: black;"><div></div></a>
                </div>
            </header>
        
        
            <main style="background-color: #EEEEEE;">
                <h2 class="dash-title" style="background-color: #EEEEEE;">Reminders</h2>
                <div class="dash-cards " style="background-color: #EEEEEE; ">

                    <div class="card-single" style = "width: 90rem; height: 25rem;">
                        <div class="card-header text-white" style="background-color: #6d5cad; font-weight: bold; font-size: large;">
                            Details of Reminders
                        </div>
                        <div class="card-body">
                            
                            <form action="http://localhost:8080/admin_view_reminders" method="POST">
                                <label style="font-family: Helvetica; font-size: 18px; text-align: left;">Select the user:</label>
                                <div id="input"></div>
                                    <!-- <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="userSel">
                                        <option selected>Select</option>
                                        <option value="User1">User1</option>
                                        <option value="User2">User2</option>
                                        <option value="User3">User3</option>
                                    </select> -->
                                    <br>
                                    <center>
                                    <button type="submit" class="btn btn-black">Show Reminders</button>
                                    </center>
                            
                                    &nbsp;
                                  <div class="form-group" style="color:#000; overflow:scroll;" >
                                    <table class="table">
                                        <thead class="thead-dark" style="padding:20px;">
                                            <tr> 
                                            <th scope="col">Email</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Date</th>
                                            <th scope="col">Time</th>
                                            <th scope="col">Message</th>
                                            <th scope="col">Sound</th>
                                            <th scope="col">Recurrence</th>
                                            <th scope="col">ID</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if(userData.length == 0){ %>
                                                <td colspan="10"><center>No Data Found</center></td>
                                               <% }; %> 
                                                <%
                                                if(userData.length != 0){
                                                for(i = 0; i < userData.length; i++){
                                                %>
                                                <tr>  
                                                <td><%- userData[i].email %></td>
                                                <td><%- userData[i].Name %></td>
                                                <td><%- userData[i].date.toString().substring(0,15) %></td>
                                                <td><%- userData[i].time %></td>
                                                <td><%- userData[i].msg %></td>
                                                <td><%- userData[i].sound %></td>
                                                <td><%- userData[i].reccurence %></td>
                                                <td><%- userData[i].id %></td>
                                                </tr>
                                                <% } } %>
                                        </tbody>
                                    </table>
                                    &nbsp;
                                    <!-- &nbsp;
                                    &nbsp; -->
                                 </div>   
                            </form>         
                        </div>
                    </div>
                
            </main>
        </div>
            
        <script src = "../jquery.js"></script>
        <script src = "../adminReminderScript.js"></script>
    </body>
</html>