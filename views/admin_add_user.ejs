            </div>
        </div>
        <div class="main-content" style="background-color: #EEEEEE;">
            <header>
                <form class="form-inline">
                    <div class="search-wrapper">
                        <span class="fas fa-search" style="font-size: 150%;"></span>
                        <input class="form-control"type="search" placeholder="Search">
                    </div>
                </form>
                <!--Notification popup-->
                <div class="notify-popup" id="notifypopup">
                    <a onclick="closenotify()"><button class="btn-danger btn-sm" style="right:0; color: white; border-color: none; align-items: center; border-radius: 25%;">x</button></a>
                    <h2>Notifications</h2>
                    <br>
                    <p>Notification 1</p>
                    <hr>
                    <p>Notification 2</p>
                </div>
                <!--Profile popup-->
                <div class="profile-popup" id="profilepopup">
                    <a onclick="closeprofile()" style="position:absolute; right: 2%; color:white; font-size:25px; text-align: end; font-weight: 700;"><button class="btn-danger btn-sm" style="color: white; border-color: none; align-items: center; border-radius: 25%;">x</button></a>
                    <h2>User</h2>
                    <ul>
                        <li style="padding-top:10px; font-size: 18px;">
                            <a href="javascript: submit4();" style="text-decoration: none; color: black;">
                                <span class="fas fa-user" style="text-decoration: none; color: black;"></span>
                                <span>View Profile</span>
                            </a>
                        </li>
                        <hr>
                        <li style=" font-size: 18px;">
                            <a href="javascript: submit4();" style="text-decoration: none; color: black;">
                                <span class="fas fa-sign-out-alt" style="text-decoration: none; color: black;"></span>
                                <span >Logout</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="social-icons">
                    <a onclick="opennotify()" style="text-decoration: none; color: black;"><span class="far fa-bell" style="font-size: 150%;"><span class="badge-bell"></span></span></a><!--Bell-->
                    <a onclick="openprofile()" style="text-decoration: none; color: black;"><div></div></a>
                </div>
            </header>
        
        
            <main style="background-color: #EEEEEE;">
                <% if (added == 1){%>
                    <div class="alert alert-success" style="color:green">
                        <center><strong>User has been added.</strong></center>
                    </div>
                <% } else if (added == 2){%>
                    <div class="alert alert-warning" style="color:black">
                        <center><strong>Unable to add user</strong></center>
                    </div>
                <% } else{%>
                    <div>
                    </div>
                <% } %>
                <h2 class="dash-title" style="background-color: #EEEEEE;">Add a User</h2>
                <div class="dash-cards " style="background-color: #EEEEEE; ">

                    <div class="card-single" style = "width: 90rem; height: 25rem;">
                        <div class="card-header text-white" style="background-color: #6d5cad; font-weight: bold; font-size: large;">
                            Enter the details of the user
                        </div>
                        <div class="card-body">


                            <div class="container">
                                <form action="http://localhost:8080/admin_add_user" method="POST">
                                    <div class="row">
                                        <div class="col-4"><label for="name">Name</label></div>
                                        <div class="col-6"><input class="form-control" type="text" placeholder="Name" id="name" name="name" required></div>
                                    </div>
                                    &nbsp;
                                    <div class="row">
                                        <div class="col-4"><label for="name" >Email</label></div>
                                        <div class="col-6"><input class="form-control" type="email" placeholder="Email" id="email" name="email" required></div>
                                    </div>
                                    &nbsp;
                                    <div class="row">
                                        <div class="col-4"><label for="name" >Password</label></div>
                                        <div class="col-6"><input class="form-control" type="text" placeholder="Password" name="pwd" id="pwd" required></div>
                                    </div>
                                    &nbsp;
                                    <div class="row">
                                        <div class="col-4"><label for="name" >Mobile</label></div>
                                        <div class="col-6"><input class="form-control" type="text" placeholder="Mobile" id="mobile" name="mobile" required></div>
                                    </div>
                                    &nbsp;
                                    <br>
                                    <div class="row">
                                        <div class="col-4"><label for="name">Address</label></div>
                                        <div class="col-6"><input class="form-control" type="text" placeholder="Address" id="address" name="address" required></div>
                                    </div>
                                    &nbsp;
                                    <br>
                                    <div class="row">
                                        <div class="col-4"><label for="name">Blood Group</label></div>
                                        <div class="col-6"><input class="form-control" type="text" placeholder="Blood Group" id="bg" name="bg" required></div>
                                    </div>
                                    &nbsp;
                                    <div class="row">
                                        <div class="col-4"><label for="name" >DOB</label></div>
                                        <div class="col-6"><input class="form-control" type="date" placeholder="Date of Birth" id="dob" name="dob" required></div>
                                    </div>
                                    <button class="btn" type="submit" value="Submit" style="background-color: #6d5cad; color: white;">Submit</button>
                                    
                                </form> 
                            </div>
                        </div>
                    </div>
            </main>
        </div>
            
        <script src = "../jquery.js"></script>
        <script src = "../indexScript.js"></script>
